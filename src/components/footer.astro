---
import LinkedInIcon from "@/assets/icons/linkedin-icon.svg";
import GitHubIcon from "@/assets/icons/github-icon.svg";

const year = new Date().getFullYear();

const footerSections = [
  {
    title: "Project",
    links: [
      {
        href: "https://github.com/Green-Software-Foundation/SOFT/issues",
        text: "Explore the Framework",
      },
      {
        href: "https://directory.greensoftware.foundation/projects/sustainable-organisational-framework-for-technology-(soft)/",
        text: "Visit the Directory",
      },
    ],
  },
  {
    title: "About the GSF",
    links: [
      {
        href: "https://greensoftware.foundation/manifesto",
        text: "Our Mission",
      },
      {
        href: "https://greensoftware.foundation/projects",
        text: "All Projects",
      },
      {
        href: "https://greensoftware.foundation/articles",
        text: "Blog",
      },
    ],
  },
  {
    title: "Legal",
    links: [
      {
        href: "https://greensoftware.foundation/policy/privacy",
        text: "Privacy Policy",
      },
      {
        href: "https://greensoftware.foundation/policy/terms",
        text: "Terms & Conditions",
      },
      {
        href: "https://creativecommons.org/licenses/by/4.0/",
        text: "Licence: Creative Commons",
      },
    ],
  },
  {
    title: "Contact",
    type: "contact",
    socialLinks: [
      {
        href: "https://www.linkedin.com/company/green-software-foundation/",
        icon: "linkedin",
        label: "LinkedIn",
      },
      {
        href: "https://github.com/Green-Software-Foundation",
        icon: "github",
        label: "GitHub",
      },
    ],
    email: "soft@greensoftware.foundation",
  },
];
---

<footer class="bg-primary-darker">
  <div class="container">
    <div
      class="grid grid-cols-1 py-12 md:py-18 lg:grid-cols-[1.5fr_1fr_1fr_1fr_1fr_1fr] lg:gap-16 lg:py-20"
    >
      <div class="flex w-full flex-col gap-4">
        <img src="/assets/footer-logo.svg" class="w-20" />
        <p class="pt-4 text-xs font-normal text-white/50">
          Copyright Â© {year} Green Software Foundation. All rights reserved.
        </p>
      </div>

      {
        footerSections.map((section) => (
          <div class="mt-8 flex flex-col gap-4 lg:mt-0">
            <h1 class="relative text-xs font-bold tracking-[3px] text-accent lg:mb-4">
              {section.title}
              <span class="hidden lg:absolute lg:-bottom-2 lg:left-0 lg:flex lg:h-1 lg:w-6 lg:bg-accent" />
            </h1>

            <div class="flex flex-col gap-4">
              {section.type === "contact" ? (
                <>
                  <div class="flex gap-4">
                    {section.socialLinks.map((social) => (
                      <a
                        href={social.href}
                        class="text-white/50 transition-colors hover:text-accent"
                        aria-label={social.label}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        {social.icon === "linkedin" && <LinkedInIcon class="text-accent" />}
                        {social.icon === "github" && <GitHubIcon class="text-accent" />}
                      </a>
                    ))}
                  </div>
                  <p class="text-xs text-white/50 underline">{section.email}</p>
                </>
              ) : (
                section.links?.map((link) => (
                  <a
                    href={link.href}
                    class="text-xs text-white/50"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {link.text}
                  </a>
                ))
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</footer>
