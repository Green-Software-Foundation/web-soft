---
import { Button } from "@/components/ui/button";
import { Card } from "./ui/card";
import LinkedInIcon from "@/assets/icons/linkedin-icon.svg";
import ExternalLinkIcon from "@/assets/icons/external-link-icon.svg";

const teamMembers = [
  {
    memberHeadshot: "/assets/pindy.jpeg",
    name: "Pindy Bhullar",
    title: "PhD Researcher / Sustainable IT Consultant",
    description: "@HSBC",
    link: {
      href: "https://www.linkedin.com/in/pindybhullar/",
      icon: LinkedInIcon,
    },
  },
  {
    memberHeadshot: "/assets/sean.jpeg",
    name: "Sean O'Keefe",
    title: "Business Program Manager, Product Operations",
    description: "@Microsoft",
    link: {
      href: "https://www.linkedin.com/in/sean-o-keefe/",
      icon: LinkedInIcon,
    },
  },
];
---

<section id="directory" class="relative py-12 md:py-18 lg:py-20">
  <div class="container max-w-2xl">
    <div class="mx-auto mb-6 w-full max-w-lg text-center md:mb-8">
      <h2 class="mb-2 text-2xl font-semibold md:text-3xl lg:text-4xl">Project Leadership</h2>
      <p class="text-sm lg:text-xl">Part of the Software Standards Working Group</p>
    </div>

    <div
      class="grid grid-cols-1 items-start justify-center gap-3 md:grid-cols-2 md:gap-4 lg:grid-cols-2"
    >
      {
        teamMembers.map((member) => (
          <Card className="flex flex-col text-center p-6">
            <div class="mb-4 flex items-center justify-center w-24 h-24 mx-auto">
              <img src={member.memberHeadshot} class="object-cover w-full h-full rounded-full" />
            </div>
            <p class="mb-1 text-xl font-bold">{member.name}</p>
            <p class="mb-1 text-sm font-semibold text-gray-darker">{member.title}</p>
            <p class="text-xs font-semibold text-gray-darker">{member.description}</p>
            <div class="mt-3 grid grid-flow-col grid-cols-[max-content] gap-3.5 self-center md:mt-4">
              <a href={member.link.href}>
                <member.link.icon class="text-primary" />
              </a>
            </div>
          </Card>
        ))
      }
    </div>

    <div class="flex items-center justify-center">
      <Button variant="outline" className="mt-8 text-gray-darker md:mt-10"
        ><a href="https://greensoftware.foundation/projects/software-standards-wg"
          >Learn More About the Working Group</a
        >
        <ExternalLinkIcon />
      </Button>
    </div>
  </div>
  <img class="absolute right-0 bottom-0 hidden lg:block" src="/assets/team-decor.svg" />
</section>
